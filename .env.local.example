NEXT_PUBLIC_SUPABASE_URL="https://YOUR_PROJECT_ID.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"

OPENAI_API_KEY="your-openai-api-key"

# お問い合わせフォーム
# 【レンサバSMTP】以下のいずれかを設定。SMTP_HOST があればSMTP優先
# SMTP_HOST="mail.example.com"
# SMTP_PORT="587"
# SMTP_SECURE="false"
# SMTP_USER="your-smtp-user"
# SMTP_PASS="your-smtp-password"
# SMTP_FROM_EMAIL="noreply@yourdomain.com"

# 【Resend】SMTP未設定時は Resend を使用
# RESEND_API_KEY="re_xxxxx"

# Stripe 課金
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_xxxxx"
# STRIPE_SECRET_KEY="sk_test_xxxxx"
# STRIPE_WEBHOOK_SECRET="whsec_xxxxx"
# STRIPE_PRICE_ID="price_xxxxx"
# NEXT_PUBLIC_APP_URL="http://localhost:3000"  # 本番では https://your-domain.com
# 送信元（任意。未設定時は onboarding@resend.dev）
# CONTACT_FROM_EMAIL="noreply@yourdomain.com"
# CONTACT_FROM_NAME="AiKen"
# 送信先の上書き（任意。未設定時は管理画面の「基本設定」の管理者メールを使用）
# CONTACT_TO_EMAIL="admin@example.com"

# Optional: logging / environment flags
NODE_ENV="development"
